{
    "manifest_version": 3,
    "name": "YouTube Lyrics Finder",
    "version": "1.0.0",
    "description": "Find song lyrics instantly while watching YouTube videos",
    
    "permissions": [
      "contextMenus",
      "activeTab",
      "storage"
    ],
    
    "host_permissions": [
      "https://www.youtube.com/*",
      "https://genius.com/*"
    ],
    
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    
    "background": {
      "service_worker": "background.js"
    },
    
    "action": {
      "default_popup": "popup.html",
      "default_title": "Find Lyrics"
    }
  }